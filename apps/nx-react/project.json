{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "nx-react",
  "sourceRoot": "apps/nx-react/src",
  "projectType": "application",
  "tags": ["type:app", "scope:frontend"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc -b && npx vite build",
        "cwd": "apps/nx-react"
      }
    },
    "serve": {
      "continuous": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "npx vite",
        "cwd": "apps/nx-react"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx vite preview",
        "cwd": "apps/nx-react"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx eslint .",
        "cwd": "apps/nx-react"
      }
    }
  }
}
